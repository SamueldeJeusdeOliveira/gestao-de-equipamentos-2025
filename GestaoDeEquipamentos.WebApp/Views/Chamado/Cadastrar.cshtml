@using GestaoDeEquipamentos.WebApp.Models

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Chamados";
}

@model CadastrarChamadoViewModel;

<div class="row justify-content-center">
    <form class="col-6" action="/Chamado/Cadastrar" method="post">
        <div class="mb-3">
            <label for="Titulo" class="form-label">Titulo</label>
            <input class="form-control" name="Titulo" value="@Model.Titulo">
        </div>

        <div class="mb-3">
            <label for="Descricao" class="form-label">Descrição</label>
            <textarea class="form-control" name="PrecoAquisicao" value="@Model.Descricao"></textarea>
        </div>

        <div class="mb-5">
            <label for="DataAbertura" class="form-label">Data de Abertura</label>
            <input class="form-control" type="date" name="Telefone" value="@Model.DataAbertura">
        </div>

        <div class="mb-5">
            <label for="EquipamentoId" class="form-label">Equipamento</label>
            <select class="form-select" name="EquipamentoId" >
                @foreach (SelecionarEquipamentoViewModel f in Model.EquipamentosDisponiveis)
                {
                    <option value="@f.Id">@f.Nome</option>
                }
            </select>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a href="/Chamado" class="btn btn-outline-primary px-5 ">Voltar</a>
            <button class="btn btn-primary px-5">Gravar</button>
        </div>
    </form>
</div>